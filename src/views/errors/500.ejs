<div class="error-page">
  <div class="error-content">
    <h1 class="error-code">500</h1>
    <h2 class="error-title"><%= title || 'Server Error' %></h2>
    <p class="error-message">
      <%= message || 'Something went wrong on our end. Please try again later.' %>
    </p>
    
    <% if (typeof stack !== 'undefined' && stack) { %>
      <div class="error-stack">
        <details>
          <summary>Stack Trace (Development Only)</summary>
          <pre><%= stack %></pre>
        </details>
      </div>
    <% } %>
    
    <div class="error-actions">
      <a href="/" class="btn btn-primary">Go to Homepage</a>
      <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
    </div>
  </div>
</div>

<style>
.error-page {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 50vh;
  padding: 2rem;
}

.error-content {
  text-align: center;
  max-width: 500px;
}

.error-code {
  font-size: 6rem;
  font-weight: 700;
  color: var(--error-color);
  margin: 0;
  line-height: 1;
}

.error-title {
  font-size: 1.75rem;
  margin: 1rem 0;
  color: var(--text-color);
}

.error-message {
  color: var(--secondary-color);
  margin: 1rem 0 2rem;
  font-size: 1.125rem;
}

.error-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.error-stack {
  margin: 1.5rem 0;
  text-align: left;
}

.error-stack details {
  background: #1f2937;
  color: #f9fafb;
  padding: 1rem;
  border-radius: 6px;
  cursor: pointer;
}

.error-stack summary {
  font-weight: 600;
  color: #fbbf24;
  user-select: none;
}

.error-stack pre {
  margin-top: 1rem;
  overflow-x: auto;
  font-size: 0.875rem;
  line-height: 1.5;
  color: #f9fafb;
}

@media (max-width: 480px) {
  .error-code {
    font-size: 4rem;
  }
  
  .error-title {
    font-size: 1.5rem;
  }
  
  .error-message {
    font-size: 1rem;
  }
  
  .error-actions {
    flex-direction: column;
  }
  
  .error-actions .btn {
    width: 100%;
  }
}
</style>
