<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Primary Meta Tags -->
  <title><%= title || 'Educard Forum' %></title>
  <% if (typeof metaDescription !== 'undefined' && metaDescription) { %>
  <meta name="description" content="<%= metaDescription %>">
  <% } else { %>
  <meta name="description" content="An educational discussion platform for students and educators to share knowledge and collaborate.">
  <% } %>
  
  <!-- Canonical URL -->
  <% if (typeof canonicalUrl !== 'undefined' && canonicalUrl) { %>
  <link rel="canonical" href="<%= canonicalUrl %>">
  <% } %>
  
  <!-- Open Graph / Facebook -->
  <% if (typeof openGraph !== 'undefined' && openGraph) { %>
    <% Object.keys(openGraph).forEach(function(key) { %>
  <meta property="<%= key %>" content="<%= openGraph[key] %>">
    <% }); %>
  <% } else { %>
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="Educard Forum">
  <meta property="og:title" content="<%= title || 'Educard Forum' %>">
  <meta property="og:description" content="An educational discussion platform for students and educators to share knowledge and collaborate.">
  <meta property="og:url" content="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'http://localhost:3000' %>">
  <% } %>
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= title || 'Educard Forum' %>">
  <% if (typeof metaDescription !== 'undefined' && metaDescription) { %>
  <meta name="twitter:description" content="<%= metaDescription %>">
  <% } %>
  
  <!-- Structured Data (JSON-LD) -->
  <% if (typeof structuredData !== 'undefined' && structuredData) { %>
    <% if (Array.isArray(structuredData)) { %>
      <% structuredData.forEach(function(data) { %>
  <script type="application/ld+json">
  <%- JSON.stringify(data, null, 2) %>
  </script>
      <% }); %>
    <% } else { %>
  <script type="application/ld+json">
  <%- JSON.stringify(structuredData, null, 2) %>
  </script>
    <% } %>
  <% } %>
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/markdown.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/monokai.min.css">
</head>
<body>
  <!-- Skip to main content link for keyboard users -->
  <a href="#main-content" class="skip-to-main">Skip to main content</a>

  <header class="site-header" role="banner">
    <div class="container">
      <h1 class="site-title">
        <a href="/" aria-label="Educard Forum Home">Educard</a>
      </h1>
      <%- include('../partials/nav') %>
    </div>
  </header>

  <main id="main-content" class="main-content" role="main">
    <div class="container">
      <%- include('../partials/flash') %>
      <%- body %>
    </div>
  </main>

  <footer class="site-footer" role="contentinfo">
    <div class="container">
      <p>&copy; 2025 Educard Forum. An educational discussion platform.</p>
    </div>
  </footer>

  <script src="/js/main.js"></script>
  <script src="/js/form-loading.js"></script>
  <script src="/js/client-validation.js"></script>
  <script src="/js/ui-enhancements.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/marked@11.1.1/marked.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
  <script src="/js/markdown-editor.js"></script>
  <script src="/js/reactions.js"></script>
</body>
</html>
