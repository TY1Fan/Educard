<nav class="breadcrumb">
  <a href="/">Home</a> &raquo; 
  <span><%= category.name %></span>
</nav>

<div class="category-header-page">
  <div class="category-info">
    <h1><%= category.name %></h1>
    <p class="category-description"><%= category.description %></p>
  </div>
  
  <% if (isAuthenticated) { %>
    <a href="/category/<%= category.slug %>/new-thread" class="btn btn-primary">
      <svg class="icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
        <path d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2z"/>
      </svg>
      New Thread
    </a>
  <% } else { %>
    <a href="/auth/login" class="btn btn-secondary">
      Login to Post
    </a>
  <% } %>
</div>

<section class="thread-list-section">
  <% if (threads && threads.length > 0) { %>
    <div class="thread-list">
      <% threads.forEach(thread => { %>
        <div class="thread-item <%= thread.isPinned ? 'pinned' : '' %> <%= thread.isLocked ? 'locked' : '' %>">
          <div class="thread-icon">
            <% if (thread.isPinned) { %>
              <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M4.146.146A.5.5 0 0 1 4.5 0h7a.5.5 0 0 1 .5.5c0 .68-.342 1.174-.646 1.479-.126.125-.25.224-.354.298v4.431l.078.048c.203.127.476.314.751.555C12.36 7.775 13 8.527 13 9.5a.5.5 0 0 1-.5.5h-4v4.5c0 .276-.224 1.5-.5 1.5s-.5-1.224-.5-1.5V10h-4a.5.5 0 0 1-.5-.5c0-.973.64-1.725 1.17-2.189A5.921 5.921 0 0 1 5 6.708V2.277a2.77 2.77 0 0 1-.354-.298C4.342 1.674 4 1.179 4 .5a.5.5 0 0 1 .146-.354z"/>
              </svg>
            <% } else if (thread.isLocked) { %>
              <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
              </svg>
            <% } else { %>
              <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
              </svg>
            <% } %>
          </div>
          
          <div class="thread-main">
            <h3 class="thread-title">
              <a href="/thread/<%= thread.slug %>"><%= thread.title %></a>
              <% if (thread.isPinned) { %>
                <span class="badge badge-pinned">Pinned</span>
              <% } %>
              <% if (thread.isLocked) { %>
                <span class="badge badge-locked">Locked</span>
              <% } %>
            </h3>
            <div class="thread-meta">
              by 
              <a href="/profile/<%= thread.author.username %>" class="author-link">
                <%= thread.author.displayName || thread.author.username %>
              </a>
              <span class="separator">â€¢</span>
              <time datetime="<%= thread.createdAt %>">
                <%= new Date(thread.createdAt).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'short', 
                  day: 'numeric' 
                }) %>
              </time>
            </div>
          </div>
          
          <div class="thread-stats">
            <div class="stat">
              <svg class="icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
              </svg>
              <span class="stat-value"><%= thread.postCount || 0 %></span>
              <span class="stat-label"><%= (thread.postCount === 1) ? 'post' : 'posts' %></span>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <% if (totalPages > 1) { %>
      <nav class="pagination" aria-label="Thread pagination">
        <% if (hasPrevPage) { %>
          <a href="?page=<%= currentPage - 1 %>" class="btn btn-secondary">
            <svg class="icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
            </svg>
            Previous
          </a>
        <% } else { %>
          <span></span>
        <% } %>
        
        <span class="page-info">
          Page <strong><%= currentPage %></strong> of <strong><%= totalPages %></strong>
        </span>
        
        <% if (hasNextPage) { %>
          <a href="?page=<%= currentPage + 1 %>" class="btn btn-secondary">
            Next
            <svg class="icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
            </svg>
          </a>
        <% } else { %>
          <span></span>
        <% } %>
      </nav>
    <% } %>
  <% } else { %>
    <div class="empty-state">
      <svg class="empty-icon" width="64" height="64" viewBox="0 0 16 16" fill="currentColor">
        <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
      </svg>
      <h3>No threads yet</h3>
      <p>Be the first to start a discussion in this category!</p>
      <% if (isAuthenticated) { %>
        <a href="/category/<%= category.slug %>/new-thread" class="btn btn-primary" style="margin-top: 1rem;">
          Create First Thread
        </a>
      <% } else { %>
        <p class="empty-state-hint">
          <a href="/auth/login">Login</a> or <a href="/auth/register">Register</a> to start a discussion.
        </p>
      <% } %>
    </div>
  <% } %>
</section>
