<style>
    /* Thread-specific styles */
    .breadcrumb {
      padding: 1rem 0;
      font-size: 0.9rem;
      color: var(--secondary-color);
    }

    .breadcrumb a {
      color: var(--primary-color);
      text-decoration: none;
    }

    .breadcrumb a:hover {
      text-decoration: underline;
    }

    .breadcrumb span {
      color: var(--text-color);
    }

    .thread-header {
      background: white;
      padding: 2rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border: 1px solid var(--border-color);
    }

    .thread-header h1 {
      margin: 0;
      font-size: 1.75rem;
      color: var(--text-color);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .thread-badge {
      font-size: 1.2rem;
    }

    .thread-actions {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .thread-controls {
      display: flex;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .btn-secondary {
      background: var(--secondary-color);
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      font-size: 0.9rem;
    }

    .btn-secondary:hover {
      background: #475569;
    }

    .btn-warning {
      background: var(--warning-color);
      color: white;
    }

    .btn-warning:hover {
      background: #d97706;
    }

    .locked-notice {
      background: #fef3c7;
      border: 1px solid #fbbf24;
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .posts-section {
      margin-top: 2rem;
    }

    .post {
      display: grid;
      grid-template-columns: 200px 1fr;
      gap: 1.5rem;
      background: white;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border-radius: 8px;
      border: 1px solid var(--border-color);
    }

    .post.first-post {
      border-left: 4px solid var(--primary-color);
    }

    .post-author {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
      text-align: center;
    }

    .author-info strong {
      display: block;
      margin-bottom: 0.25rem;
    }

    .author-info a {
      color: var(--primary-color);
      text-decoration: none;
      font-size: 1rem;
      font-weight: 600;
    }

    .author-info a:hover {
      text-decoration: underline;
    }

    .author-info small {
      display: block;
      color: var(--secondary-color);
      font-size: 0.75rem;
    }

    .post-content {
      min-width: 0;
    }

    .post-body {
      white-space: pre-wrap;
      word-wrap: break-word;
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    .post-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid var(--border-color);
      font-size: 0.875rem;
      color: var(--secondary-color);
    }

    .post-footer time {
      font-size: 0.85rem;
    }

    .edited-indicator {
      font-style: italic;
      margin-left: 0.5rem;
    }

    .post-actions {
      display: flex;
      gap: 0.5rem;
    }

    .btn-sm {
      padding: 0.25rem 0.75rem;
      font-size: 0.875rem;
    }

    .btn-danger {
      background: var(--error-color);
      color: white;
      border: none;
    }

    .btn-danger:hover {
      background: #b91c1c;
    }

    .delete-btn {
      cursor: pointer;
    }

    .reply-section {
      margin-top: 2rem;
      background: white;
      padding: 2rem;
      border-radius: 8px;
      border: 1px solid var(--border-color);
    }

    .reply-section h3 {
      margin-top: 0;
      margin-bottom: 1rem;
    }

    .guest-message {
      text-align: center;
      padding: 2rem;
      background: white;
      border-radius: 8px;
      margin-top: 2rem;
      border: 1px solid var(--border-color);
    }

    .guest-message a {
      color: var(--primary-color);
      text-decoration: none;
      font-weight: 500;
    }

    .guest-message a:hover {
      text-decoration: underline;
    }

    .pagination {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 2rem 0;
      padding: 1rem;
      background: white;
      border-radius: 8px;
      border: 1px solid var(--border-color);
    }

    .page-info {
      font-weight: 500;
      color: var(--text-color);
    }

    @media (max-width: 768px) {
      .post {
        grid-template-columns: 1fr;
      }

      .post-footer {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .thread-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .pagination {
        flex-direction: column;
        gap: 1rem;
      }
    }
  </style>

  <div class="container">
    <nav class="breadcrumb" aria-label="Breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
      <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <a href="/" itemprop="item">
          <span itemprop="name">Home</span>
        </a>
        <meta itemprop="position" content="1" />
      </span>
      <span class="separator" aria-hidden="true">&raquo;</span>
      <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <a href="/category/<%= thread.category.slug %>" itemprop="item">
          <span itemprop="name"><%= thread.category.name %></span>
        </a>
        <meta itemprop="position" content="2" />
      </span>
      <span class="separator" aria-hidden="true">&raquo;</span>
      <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <span itemprop="name"><%= thread.title %></span>
        <meta itemprop="position" content="3" />
      </span>
    </nav>

    <div class="thread-header">
      <div>
        <h1>
          <% if (thread.isPinned) { %>
            <span class="thread-badge" title="Pinned">ðŸ“Œ</span>
          <% } %>
          <% if (thread.isLocked) { %>
            <span class="thread-badge" title="Locked">ðŸ”’</span>
          <% } %>
          <%= thread.title %>
        </h1>
        <% if (isAuthenticated && user.id === thread.userId) { %>
          <div class="thread-controls">
            <form action="/thread/<%= thread.slug %>/pin" method="POST" style="display: inline;">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-secondary">
                <%= thread.isPinned ? 'ðŸ“Œ Unpin' : 'ðŸ“Œ Pin' %>
              </button>
            </form>
            <form action="/thread/<%= thread.slug %>/lock" method="POST" style="display: inline;">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-warning">
                <%= thread.isLocked ? 'ðŸ”“ Unlock' : 'ðŸ”’ Lock' %>
              </button>
            </form>
          </div>
        <% } %>
      </div>
      <div class="thread-actions">
        <% if (isAuthenticated && user.id === thread.userId) { %>
          <form action="/thread/<%= thread.slug %>/delete" method="POST" style="display: inline;">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn btn-danger delete-btn" onclick="return confirm('Are you sure you want to delete this thread? This action cannot be undone.');">Delete Thread</button>
          </form>
        <% } %>
      </div>
    </div>

    <section class="posts-section">
      <% posts.forEach((post, index) => { %>
        <article class="post <%= post.isFirstPost ? 'first-post' : '' %>">
          <aside class="post-author">
            <%- include('../partials/user-avatar', { user: post.author, size: 'large', linkToProfile: true }) %>
            <div class="author-info">
              <strong><a href="/profile/<%= post.author.username %>"><%= post.author.displayName || post.author.username %></a></strong>
              <small>Member since <%= new Date(post.author.createdAt).toLocaleDateString() %></small>
            </div>
          </aside>
          
          <div class="post-content">
            <div class="post-body markdown-content">
              <%- post.renderedContent || post.content %>
            </div>
            
            <footer class="post-footer">
              <div>
                <time datetime="<%= post.createdAt %>">
                  Posted <%= new Date(post.createdAt).toLocaleString() %>
                </time>
                
                <% if (post.editedAt) { %>
                  <span class="edited-indicator">
                    (Edited <%= new Date(post.editedAt).toLocaleString() %>)
                  </span>
                <% } %>
              </div>
              
              <% if (isAuthenticated && user.id === post.userId) { %>
                <div class="post-actions">
                  <a href="/post/<%= post.id %>/edit" class="btn btn-sm">Edit</a>
                  <% if (!post.isFirstPost) { %>
                    <form action="/post/<%= post.id %>/delete" method="POST" style="display: inline;">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-sm btn-danger delete-btn" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
                    </form>
                  <% } %>
                </div>
              <% } %>
            </footer>
          </div>
        </article>
      <% }) %>
    </section>

    <!-- Jump Navigation Buttons -->
    <div class="jump-nav" id="jump-nav">
      <button class="jump-btn jump-top" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" title="Jump to top (Shift + T)" aria-label="Jump to top">
        <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
          <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
        </svg>
        <span class="jump-label">Top</span>
      </button>
      <button class="jump-btn jump-bottom" onclick="window.scrollTo({top: document.body.scrollHeight, behavior: 'smooth'})" title="Jump to bottom (Shift + B)" aria-label="Jump to bottom">
        <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
          <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
        </svg>
        <span class="jump-label">Bottom</span>
      </button>
    </div>

    <% if (totalPages > 1) { %>
      <nav class="pagination">
        <% if (hasPrevPage) { %>
          <a href="?page=<%= currentPage - 1 %>" class="btn btn-secondary">&laquo; Previous</a>
        <% } else { %>
          <span></span>
        <% } %>
        
        <div class="page-selector">
          <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
          <% if (totalPages > 2) { %>
            <select class="jump-to-page" aria-label="Jump to page" onchange="if(this.value) window.location.href='?page='+this.value">
              <option value="">Jump to...</option>
              <% for (let i = 1; i <= totalPages; i++) { %>
                <option value="<%= i %>" <%= i === currentPage ? 'selected' : '' %>>Page <%= i %></option>
              <% } %>
            </select>
          <% } %>
        </div>
        
        <% if (hasNextPage) { %>
          <a href="?page=<%= currentPage + 1 %>" class="btn btn-secondary">Next &raquo;</a>
        <% } else { %>
          <span></span>
        <% } %>
      </nav>
    <% } %>

    <% if (thread.isLocked) { %>
      <div class="locked-notice">
        <span>ðŸ”’</span>
        <strong>This thread is locked.</strong> No new replies are allowed.
      </div>
    <% } %>

    <% if (isAuthenticated && !thread.isLocked) { %>
      <section class="reply-section">
        <h3>Reply to Thread</h3>
        <%- include('../partials/reply-form', { 
          threadSlug: thread.slug,
          errors: typeof errors !== 'undefined' ? errors : [],
          formData: typeof formData !== 'undefined' ? formData : {}
        }) %>
      </section>
    <% } else if (!isAuthenticated && !thread.isLocked) { %>
      <div class="guest-message">
        <p><a href="/auth/login">Login</a> or <a href="/auth/register">Register</a> to reply to this thread.</p>
      </div>
    <% } %>
  </div>
