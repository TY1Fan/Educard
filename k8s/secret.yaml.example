# Kubernetes Secret Template for Educard
#
# IMPORTANT: This is a TEMPLATE file. Do NOT add real credentials here!
# 
# To use this template:
# 1. Copy this file: cp k8s/secret.yaml.example k8s/secret.yaml
# 2. Replace placeholder values with actual secrets
# 3. Apply: kubectl apply -f k8s/secret.yaml
# 4. DO NOT commit k8s/secret.yaml to git!
#
# Or use the helper script: ./k8s/create-secrets.sh

apiVersion: v1
kind: Secret
metadata:
  name: educard-secrets
  namespace: educard-prod
  labels:
    app: educard
    component: secrets
type: Opaque
stringData:
  # Database credentials
  DB_USER: "educard"
  DB_PASSWORD: "CHANGE-THIS-TO-STRONG-PASSWORD"
  
  # Session secret (use 64+ random characters)
  SESSION_SECRET: "CHANGE-THIS-TO-RANDOM-64-CHAR-STRING"

# Alternative using base64-encoded data:
# data:
#   DB_USER: ZWR1Y2FyZA==  # "educard" in base64
#   DB_PASSWORD: <base64-encoded-password>
#   SESSION_SECRET: <base64-encoded-secret>

# Generate strong passwords:
#   openssl rand -hex 32
#   openssl rand -base64 32
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
